package home

import ( "zaivod-logistics/web/templates/base" )

templ styles() {
	<link rel="stylesheet" href="/web/static/styles/services.css"/>
}
templ scripts() {
	<script type="text/javascript" src="/web/static/scripts/map.js"></script>
	<script type="text/javascript" src="/web/static/scripts/interactive_map.js"></script>
}

templ sections(language string, phrases map[string]map[string]string) {
	@carousel(language, phrases)
	@aboutUs(language, phrases)
	@findUs(language, phrases)
	@services(language, phrases)
	@contactUs(language, phrases)
}

templ Handler(route, icon, language  string) {
	@base.Base(route, icon, phrases, language, styles(), scripts(), sections(language, phrases))
}
